{
  "private": true,
  "name": "yarn-workspaces-monorepo",
  "license": "MIT",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "build-ci": "yarn workspaces foreach -pt -v --since=\"origin/master\" --no-private run \"lint && build\"",
    "build": "yarn workspaces foreach -pt -v --no-private run build",
    "release": "yarn build-ci && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0"
  },
  "packageManager": "yarn@3.4.1"
}
